CREATE ITEM

<% if @item.errors %>
  <% @item.errors.messages.each do |x, v| %>
  <%= "#{x}: #{v[0]}" %></br>
  <% end %>
<% end %>

<%= form_for(@item) do |f| %>
  <%= f.label :name %></br>
  <%= f.text_field :name %></br>
  <%= f.label :desc %></br>
  <%= f.text_area :desc %></br>
  <%= f.label :value %></br>
  <%= f.number_field :value %></br>
  <%= f.submit %>
<% end %>